# Speed Up SSH by Reusing Connections
# https://puppetlabs.com/blog/speed-up-ssh-by-reusing-connections
Host *
ControlMaster auto
ControlPath ~/.ssh/sockets/%r@%h-%p
ControlPersist 600

# Disable adding to known hosts for machines in the local network
Host 192.168.*.*
StrictHostKeyChecking no
UserKnownHostsFile=/dev/null

# virtual machines
Host codigi
Hostname 10.211.55.9
User palavrov
Port 22

Host ttk
Hostname 10.211.55.21
User palavrov
Port 22

# synology NAS
Host synology
Hostname 10.0.0.0
# Hostname 192.168.1.17
User palavrov
Port 22

Host synology_local
Hostname 169.254.195.3
User palavrov
Port 22

# reverse SSH tunneling
Host plovdiv
Hostname localhost
User palavrov
Port 22222

# KERPI
Host kerpi_server
Hostname baza.kerpi.bg
User palavrov
Port 1022

# Smartmatic
Host smartmatic_gerrit
Hostname waffle-main.smartmatic.net
Port 29418
User atanas.palavrov
IdentityFile ~/.ssh/id_rsa.pub

Host smartmatic_vagrand
HostName 127.0.0.1
User vagrant
Port 2222
UserKnownHostsFile /dev/null
StrictHostKeyChecking no
PasswordAuthentication no
IdentityFile /Users/palavrov/codigi/smartmatic/builder/.vagrant/machines/default/virtualbox/private_key
IdentitiesOnly yes
LogLevel FATAL

